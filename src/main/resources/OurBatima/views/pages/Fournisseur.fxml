<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="1201.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.ourbatima.controllers.FournisseurController"
            stylesheets="@../../style/css/boutton.css">

    <children>
        <Label layoutX="367.0" layoutY="86.0" text="Ajouter un fournisseur" textFill="#4c3f0a">
            <font>
                <Font name="Arial Rounded MT Bold" size="20.0" />
            </font>
        </Label>

        <Text fill="#4c3f0a" layoutX="369.0" layoutY="156.0" text="Nom :">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Text>
        <TextField fx:id="nomField" layoutX="367.0" layoutY="171.0" prefHeight="26.0" prefWidth="466.0" promptText="Entrez le nom..." />

        <Text fill="#4c3f0a" layoutX="369.0" layoutY="227.0" text="Prénom :">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Text>
        <TextField fx:id="prenomField" layoutX="367.0" layoutY="242.0" prefHeight="26.0" prefWidth="466.0" promptText="Entrez le prénom..." />

        <Text fill="#4c3f0a" layoutX="369.0" layoutY="298.0" text="Email :">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Text>
        <TextField fx:id="emailField" layoutX="367.0" layoutY="313.0" prefHeight="26.0" prefWidth="466.0" promptText="Entrez l'email..." />

        <Text fill="#4c3f0a" layoutX="369.0" layoutY="369.0" text="Téléphone :">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Text>
        <TextField fx:id="telephoneField" layoutX="367.0" layoutY="384.0" prefHeight="26.0" prefWidth="466.0" promptText="Entrez le numéro..." />

        <Text fill="#4c3f0a" layoutX="369.0" layoutY="440.0" text="Adresse :">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Text>
        <TextField fx:id="adresseField" layoutX="367.0" layoutY="455.0" prefHeight="26.0" prefWidth="466.0" promptText="Entrez l'adresse..." />

        <Button fx:id="addFournisseurButton" layoutX="564.0" layoutY="520.0" mnemonicParsing="false"
                onAction="#handleAddFournisseur" prefHeight="45.0" prefWidth="122.0"
                styleClass="btn-gradient" text="Ajouter" textFill="WHITE">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Button>

        <Text fill="#4c3f0a" layoutX="369.0" layoutY="590.0" text="Retour à la page principale ?">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Text>
        <Hyperlink fx:id="homeLink" layoutX="567.0" layoutY="590.0" onAction="#goToHome" text="Accueil">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Hyperlink>
    </children>
</AnchorPane>