<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<?import java.lang.String?>
<AnchorPane prefHeight="350.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.ourbatima.controllers.UpdatePlan">
    <children>
        <Label layoutX="20.0" layoutY="10.0" text="Modifier le Plan" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <ComboBox fx:id="tacheDescriptions" layoutX="20.0" layoutY="40.0" prefWidth="360.0"
                  promptText="Sélectionner une tâche"/>

        <DatePicker fx:id="datePlanifieePicker" layoutX="20.0" layoutY="80.0" prefWidth="360.0"
                    promptText="Date prévue"/>

        <TextField fx:id="heureDebutField" layoutX="20.0" layoutY="120.0" prefWidth="160.0"
                   promptText="Heure début (HH:mm:ss)"/>

        <TextField fx:id="heureFinField" layoutX="220.0" layoutY="120.0" prefWidth="160.0"
                   promptText="Heure fin (HH:mm:ss)"/>

        <TextArea fx:id="remarquesField" layoutX="20.0" layoutY="160.0" prefWidth="360.0" prefHeight="60.0"
                  promptText="Remarques"/>

        <!-- ComboBox for statut -->
        <ComboBox fx:id="statusComboBox" layoutX="20.0" layoutY="230.0" prefWidth="360.0" promptText="Sélectionnez un statut">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Planifié"/>
                    <String fx:value="En cours"/>
                    <String fx:value="Terminé"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Button fx:id="updateButton" layoutX="20.0" layoutY="280.0" text="✅ Mettre à Jour" onAction="#updatePlan"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" layoutX="220.0" layoutY="280.0" text="❌ Annuler" onAction="#closePopup"
                style="-fx-background-color: #FF0000; -fx-text-fill: white;"/>
    </children>
</AnchorPane>
