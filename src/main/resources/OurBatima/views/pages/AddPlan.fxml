<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/18.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.ourbatima.controllers.AddPlan">
    <children>
        <!-- Button to load tasks -->
        <Button layoutX="250.0" layoutY="50.0" text="Tâches"
                fx:id="seeTachesButton" onAction="#onSeeTachesClicked"/>

        <!-- Task selection ComboBox -->
        <ComboBox fx:id="tacheDescriptions" layoutX="200.0" layoutY="100.0"
                  prefWidth="200.0" promptText="Sélectionnez une tâche"/>

        <!-- Button to edit the selected task -->
        <Button fx:id="editTaskButton" layoutX="410.0" layoutY="100.0" text="✏️"
                onAction="#onEditTaskClicked"/>

        <!-- Date Planifiée -->
        <Label layoutX="50.0" layoutY="150.0" text="Date Planifiée:"/>
        <DatePicker fx:id="datePicker" layoutX="150.0" layoutY="150.0"/>

        <!-- Heure Début -->
        <Label layoutX="50.0" layoutY="200.0" text="Heure Début:"/>
        <TextField fx:id="heureDebutField" layoutX="150.0" layoutY="200.0" promptText="HH:mm:ss"/>

        <!-- Heure Fin -->
        <Label layoutX="50.0" layoutY="250.0" text="Heure Fin:"/>
        <TextField fx:id="heureFinField" layoutX="150.0" layoutY="250.0" promptText="HH:mm:ss"/>

        <!-- Remarques -->
        <Label layoutX="50.0" layoutY="300.0" text="Remarques:"/>
        <TextArea fx:id="remarquesArea" layoutX="150.0" layoutY="300.0" prefWidth="300.0" prefHeight="50.0"/>

        <!-- Status Selection -->
        <ComboBox fx:id="statusComboBox" layoutX="150.0" layoutY="370.0" prefWidth="200.0" promptText="Sélectionnez un statut">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Planifié"/>
                    <String fx:value="En cours"/>
                    <String fx:value="Terminé"/>
                </FXCollections>
            </items>
        </ComboBox>


        <!-- Save Button -->
        <Button fx:id="saveButton" layoutX="250.0" layoutY="420.0" text="Sauvegarder"
                onAction="#onSaveClicked"/>

        <!-- Button to SEE ALL PLANS -->
        <Button layoutX="30.0" layoutY="460.0" text="Voir tous les plans"
                onAction="#onSeeAllPlansClicked"/>
    </children>
</AnchorPane>
