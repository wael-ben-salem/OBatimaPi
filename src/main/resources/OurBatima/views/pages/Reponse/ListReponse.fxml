<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.OurBatima.controllers.Reponse.ListReponseController">

    <VBox spacing="10" style="-fx-padding: 20;">
        <!-- Button to load reclamations -->
        <!-- Champ de saisie pour la recherche -->
        <TextField fx:id="searchField" promptText="Entrez l'ID ou une description"
                   prefWidth="25" />

        <!-- Bouton pour lancer la recherche -->
        <Button text="Rechercher" onAction="#searchReponse" />

        <!-- Label pour afficher le résultat -->
        <Label fx:id="resultLabel" wrapText="true" text="Résultat de la recherche ici"
               prefWidth="250" />
        <Button onAction="#loadReponses" text="Load Reponses" />

        <!-- GridPane to display the reclamations -->
        <GridPane fx:id="reponseGrid" style="-fx-padding: 5;">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="50" />  <!-- ID -->
                <ColumnConstraints hgrow="ALWAYS" minWidth="150" /> <!-- Description -->
                <ColumnConstraints hgrow="ALWAYS" minWidth="100" /> <!-- Statut -->
                <ColumnConstraints hgrow="ALWAYS" minWidth="150" /> <!-- Date -->
                <ColumnConstraints hgrow="ALWAYS" minWidth="150" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200" /> <!-- Action (Save + Delete) -->
            </columnConstraints>



            <children>
                <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Description" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Statut" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Date" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="ReclamationId" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Action" GridPane.columnIndex="8" GridPane.rowIndex="0" />
                <!-- Save and Delete Buttons under Action -->
                <HBox spacing="10" GridPane.columnIndex="5" GridPane.rowIndex="1" style="-fx-padding: 5; -fx-alignment: center;">
                    <children>
                        <Button fx:id="saveButton" text="Update" style="-fx-padding: 5;" />
                        <Button fx:id="deleteButton" text="Delete" style="-fx-padding: 5; -fx-background-color: #ff4444; -fx-text-fill: white;" />
                    </children>
                </HBox>
            </children>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </VBox>
</AnchorPane>

