<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<StackPane xmlns="http://javafx.com/javafx/18.0.2"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="io.ourbatima.controllers.StockController">

    <children>
        <HBox prefHeight="546" prefWidth="1134" spacing="0">
            <StackPane prefWidth="358">
                <children>
                    <VBox alignment="CENTER" prefHeight="546.0" prefWidth="406.0" spacing="30">
                        <Label text="Our Bâtima" />
                        <TextFlow textAlignment="CENTER">
                            <Text text="Ajoutez votre stock" />
                        </TextFlow>
                    </VBox>
                </children>
            </StackPane>

            <StackPane HBox.hgrow="ALWAYS">
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox fx:id="stockContent" alignment="CENTER" spacing="40">
                            <VBox alignment="CENTER" spacing="10">
                                <Label text="Ajouter Stock" />
                                <Label text="Entrez les détails du stock" />
                            </VBox>

                            <GridPane alignment="CENTER" hgap="15" maxWidth="400" vgap="20">
                                <columnConstraints>
                                    <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
                                    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
                                </columnConstraints>

                                <children>
                                    <TextField fx:id="nomField" promptText="Nom du Stock" />
                                    <TextField fx:id="emplacementField" promptText="Emplacement" GridPane.rowIndex="1" />
                                    <DatePicker fx:id="dateCreationField" promptText="Date de Création" GridPane.rowIndex="2" />
                                    <Button fx:id="addStockButton" text="Ajouter Stock" onAction="#handleAddStock" GridPane.rowIndex="3" />
                                    <HBox alignment="CENTER" spacing="5" GridPane.rowIndex="4">
                                        <Label text="Retour à la page principale ?" />
                                        <Hyperlink fx:id="homeLink" text="Accueil" onAction="#goToHome" />
                                    </HBox>
                                </children>
                            </GridPane>
                        </VBox>
                    </content>
                </ScrollPane>
            </StackPane>
        </HBox>
    </children>
</StackPane>
